doctype html

html
	head
		title 吧唧

		link( rel="stylesheet",href='/common.css')
		
		link(rel="stylesheet", href='/home.css')
	body
		include header.pug
			
		a.new-post(href='/post') 我要发贴！
	
		ul
			each post in posts
				li.post-item
					a(href=`/user/${post.userId}`)
						img(src=post.avatar alt=post.name)
					h2
						a(href=`/post/${post.id}`)=post.title
					span 发帖时间：#{new Date(post.createdAt).toLocaleString('zh', { hour12: true })}
					span 回帖数量： #{post.commentCount}
					

		include footer.pug